<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Apply for all button style -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!--  Action mode style       -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.Theme.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_clear_black_24dp</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

        <item name="android:textColorPrimary">@android:color/white</item>

<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="Widget.App.Theme.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ProductName">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ProductExpiry">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="ProductExpiryWarning">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="ProductExpiryDanger">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="StickyBottomButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/sticky_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>
